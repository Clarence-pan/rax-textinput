
<input a:if="{{!multiline}}" class="rax-textinput {{className}}" 
    style="{{style}}"
    onTap="onClick" 
    focus="{{autoFocus}}"
    disabled="{{!editable}}"
    type="text"
    maxlength="{{maxLength}}"
    placeholder="{{placeholder}}"
    password="{{password||secureTextEntry}}"
    value="{{value||defaultValue}}"
    onAppear="onAppear"
    onDisAppear="onDisAppear"
    onBlur="onBlur"
    onFocus="onFocus"
    onInput="onInput"
    onConfirm="onChange">
</input>
<textarea a:else class="rax-textinput {{className}}" 
    style="{{style}}"
    onTap="onClick" 
    focus="{{autoFocus}}"
    disabled="{{!editable}}"
    type="text"
    maxlength="{{maxLength}}"
    placeholder="{{placeholder}}"
    password="{{password||secureTextEntry}}"
    value="{{value||defaultValue}}"
    onAppear="onAppear"
    onDisAppear="onDisAppear"
    onBlur="onBlur"
    onFocus="onFocus"
    onInput="onInput"
    onConfirm="onChange"/>
